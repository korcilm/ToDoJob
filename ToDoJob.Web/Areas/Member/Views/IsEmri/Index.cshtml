@model List<JobAllListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
    int index = 0;
}

@foreach (var job in Model)
{
    index++;
    <div class="card my-2">
        <div class="card-header">
            @job.Name
        </div>
        <div class="card-body">
            <h5 class="card-title"><span class="text-danger">Aciliyet Durumu : </span> @job.Aciliyet.Description</h5>
            <p class="card-text"> @job.Description</p>
            
            <p class="text-right">
                @if (job.Raporlar.Count>0)
                {
                    <a class="btn btn-secondary btn-sm" data-toggle="collapse" href="#collapseExample-@index" role="button" aria-expanded="false" aria-controls="collapseExample">
                        Raporlara Git <i class="fas fa-caret-down ml-2"></i>
                        <span class="badge badge-info"> @job.Raporlar.Count</span>
                    </a>
                }
                else
                {
                    <span class="text-left text-danger my-1 d-block">Rapor bulunmamaktadır. Görevinizdeki ilerlemeden bahsedin.</span>
                    <a asp-action="AddRapor" asp-route-id="@job.Id" class="btn btn-secondary btn-sm">Rapor Yaz</a>
                }

                <a href="" data-id="@job.Id" data-toggle="modal" data-target="#exampleModal" class="btn btn-success btn-sm">
                    Tamamlandı Olarak İşaretle
                </a>

            </p>
            <div class="collapse" id="collapseExample-@index">
                <a asp-action="AddRapor" asp-route-id="@job.Id" class="btn btn-secondary btn-sm">Rapor Yaz</a>
                <table class="table table-hover table-bordered table-sm">
                    <tr>
                        <th>Ad</th>
                        <th>Tanım</th>
                        <th>İşlem</th>
                    </tr>
                    @foreach (var item in @job.Raporlar)
                    {
                        <tr>
                            <td>@item.Description</td>
                            <td>@item.Detail</td>
                            <td><a asp-action="UpdateRapor" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a> </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>
}

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bu işlemi gerçekleştirmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                <button id="btnSave" type="button" class="btn btn-primary">Evet</button>
            </div>
        </div>
    </div>
</div>

@section JavaScript
{
    <script type="text/javascript">
        $(document).ready(function() {
            $("#exampleModal").on("show.bs.modal",function(event) {
                let tetikleyenElement = $(event.relatedTarget);
                let data = tetikleyenElement.data("id");
                $("#btnSave").click(function() {
                    $.ajax({
                        type: "GET",
                        contentType: "application/json; charset=utf-8",
                        url: "./IsEmri/CompleteJob",
                        data: { jobId: data },
                        success: function() {
                            window.location.reload();
                        },
                        error: function(error) {
                            alert(error.responseText);
                        }
                    });
                });
            });
        });
    </script>
}
