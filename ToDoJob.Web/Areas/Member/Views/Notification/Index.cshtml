@model List<NotificationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="mt-3 col-md-6">
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <form asp-action="Index" class="my-1 col-md-12" method="post">
                <input type="hidden" name="id" value="@item.Id" />
                <div class="alert alert-success">
                    @item.Description
                    <button class="btn btn-info btn-sm float-right">Okundu </button>
                </div>
            </form>
        }
    }
    else
    {
        <div class="alert alert-secondary my-1">
            Yeni bildiriminiz bulunmamaktadır.
        </div>
    }
</div>
