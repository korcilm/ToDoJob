@model List<AciliyetListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@if (Model.Count > 0)
{
    <!-- row -->
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <div class="row">
                    <div class="col-md-10">
                        <h4><i class="fa fa-angle-right"></i> Durum Oluştur</h4>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="AddAciliyet" asp-controller="Aciliyet" class="btn btn-success btn-sm mt-2 float-right"><i class="fas fa-plus mr-2"></i> Ekle</a>
                    </div>
                </div>

                <hr>

                <table class="table table-striped table-advance table-hover">

                    <thead>
                        <tr>
                            <th><i class="fa fa-question-circle"></i> Tanım</th>
                            <th> </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="UpdateAciliyet" asp-controller="Aciliyet" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="far fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>
    <!-- /row -->
}
else
{
    <div class="text-center mt-4">
        <p class="lead">Sistemde kayıtlı aciliyet bulunamadı</p>
        <a asp-action="AddAciliyet" asp-controller="Aciliyet" class="btn btn-success">Acil Durum Ekle </a>
    </div>
}


