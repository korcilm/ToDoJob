@model UpdateAciliyetDto
@{
    ViewData["Title"] = "UpdateAciliyet";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-panel">
    <h4><i class="fa fa-angle-right"></i> Durum Ekle</h4>
    <hr />
    <form role="form" method="post" asp-action="UpdateAciliyet" class="form-horizontal style-form">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label class="col-lg-2 control-label">Tanım : </label>
            <div class="col-lg-10">
                <input type="text" asp-for="Description" id="f-name" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-theme" type="submit"> Kaydet</button>
            </div>
        </div>
    </form>
</div>


@section JavaScript
{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
