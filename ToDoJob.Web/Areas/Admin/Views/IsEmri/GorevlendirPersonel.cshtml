@model PersonelGorevlendirListDto
@{
    ViewData["Title"] = "GorevlendirPersonel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-2">
    <div class="col-md-4 col-sm-4 mb-2">
        <!-- REVENUE PANEL -->
        <div class="green-panel pn">
            <div class="green-header">
                <h5>Görev Bilgileri</h5>
            </div>
            <h5><b>@Model.Job.Name</b> <span class="label label-warning label-mini">@Model.Job.Aciliyet.Description</span> </h5>
            <p>@Model.Job.Description</p>
            <p class="mt"> @Model.Job.CreateDate.ToString("D")</p>
        </div>
    </div>
    <div class="col-md-8">
        <div class="message-p pn">
            <div class="message-header">
                <h5>@Model.AppUser.Name @Model.AppUser.SurName</h5>
            </div>
            <div class="row">
                <div class="col-md-3  mb-2 centered hidden-sm hidden-xs">
                    <img src="/img/@Model.AppUser.Picture" class="img-circle" width="80" alt="@Model.AppUser.Name">
                </div>
                <div class="col-md-9">
                    <p class="message"> <getJobAppUserId app-user-id="@Model.AppUser.Id"> </getJobAppUserId></p>
                    <p class="small">@Model.AppUser.Email</p>
                </div>
            </div>
        </div>

        
    </div>

    <div class="col-md-12 mt-2">
        <form asp-action="AtaPersonel" method="post">
            <p class="lead text-center">
                Yukardaki göreve iligili personel atanacaktır. Bu işlemi gerçekleştirmek istediğinize emin misiniz?
            </p>
            <div class="form-group text-center">
                <a asp-action="AtaPersonel" asp-route-id="@Model.Job.Id" class="btn btn-warning"><i class="fas fa-chevron-circle-left mr-2"></i>Vazgeç</a>

                <input type="hidden" name="PersonelId" value="@Model.AppUser.Id" />
                <input type="hidden" name="JobId" value="@Model.Job.Id" />
                <button type="submit" class="btn btn-theme"><i class="fas fa-check mr-2"></i>Görevlendir</button>
            </div>

        </form>
    </div>
</div>


