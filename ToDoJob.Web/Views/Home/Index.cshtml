@model UserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}


<div class="container-fluid">
    <div class="row main-content bg-success text-center">
        <div class="col-md-4 text-center company__info">
            <span class="company__logo"><i class="fas fa-sign-in-alt fa-2x"></i></span>
            <h4 class="company_title">İş Takip Sistemi</h4>
        </div>
        <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="text-center p-2">LogIn</h2>
                    </div>

                </div>
                <div class="row">
                    <form asp-action="SignIn" method="post" class="w-100">
                        <div class="row mt-3">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <input asp-for="UserName" type="text" name="username" id="username" class="form__input" placeholder="Username">
                        </div>
                        <div class="row mt-3">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input asp-for="Password" type="password" name="password" id="password" class="form__input" placeholder="Password">
                        </div>
                        <div class="row mt-3 ml-2">
                            <input type="checkbox" asp-for="RememberMe" class="form-check-input ">
                            <label asp-for="RememberMe">Remember Me!</label>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <input type="submit" value="Submit" class="btn mx-auto">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="row">
                    <p>Don't have an account?  <a asp-action="SignUp" class="text-decoration-none p-2">Hesap Oluştur</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
